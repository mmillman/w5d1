<!DOCTYPE html>
<html>
<head>
  <title>WebStore</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body>
	<header>
		<% if signed_in? %>
			<%= current_user.email %>
			<%= link_to "Sign out", signout_path, method: "delete" %>
		<% else %>
			<%= link_to "Sign in", signin_path %>
		<% end %>
	</header>

	<%= flash_messages %>

	<%= yield %>

</body>
</html>
